# DEBUG: Check why keypoints aren't being detected
if color != "orange" and len(keypoints) == 0:
    print(f"DEBUG {color}: No keypoints but mask has {np.sum(mask_image > 0)} white pixels")
    
    # Check if any contours exist
    contours, _ = cv2.findContours(mask_image, cv2.RETR_EXTERNAL, cv2.CHAIN_APPROX_SIMPLE)
    print(f"DEBUG {color}: Found {len(contours)} contours")
    for i, contour in enumerate(contours):
        area = cv2.contourArea(contour)
        print(f"  Contour {i}: area = {area}")

elif color == "green":
    lower = (40, 50, 50)
    upper = (90, 255, 255)
    color_bgr = (0, 255, 0)  # Green for green
elif color == "yellow":
    # CHANGED: Use actual yellow range
    lower = (20, 100, 100)
    upper = (30, 255, 255)
    color_bgr = (0, 255, 255)  # Yellow for yellow

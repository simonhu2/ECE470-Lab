#blob_search

#!/usr/bin/env python

import cv2
import numpy as np

# ========================= Student's code starts here =========================

# Params for camera calibration

theta = 0.0150
beta = 720
tx = 0.2487
ty = 0.1270

# Function that converts image coord to world coord
def IMG2W(col, row):
    o_r = 240
    o_c = 320

    x_c = (1/beta) * (row - o_r) 
    y_c = (1/beta) * (col - o_c)

    x_w = np.cos(theta)*x_c - np.sin(theta)*y_c + tx
    y_w = np.sin(theta)*x_c + np.cos(theta)*y_c + ty

    return [x_w, y_w]
# ========================= Student's code ends here ===========================

# # Params for camera calibration
# theta = 0.176
# beta = 752.21      #10m apart
# tx = 0.2571
# ty = 0.062

# # Function that converts image coord to world coord
# def IMG2W(col, row):
#     pass
#     O_r = 240       #from Figure B.2

    try:
        start_green  = [xw_yw_G[0][0], xw_yw_G[0][1], PICK_Z]
        start_yellow = [xw_yw_Y[0][0], xw_yw_Y[0][1], PICK_Z]
    except IndexError:
        rospy.logwarn("Detection lost for a moment â€” waiting again.")
        # re-enter waiting loop
        while True:
            if len(xw_yw_G) > 0 and len(xw_yw_Y) > 0:
                rospy.sleep(0.1)
                break
            time.sleep(0.2)
        # try again
        start_green  = [xw_yw_G[0][0], xw_yw_G[0][1], PICK_Z]
        start_yellow = [xw_yw_Y[0][0], xw_yw_Y[0][1], PICK_Z]


    # Define drop-off targets
    DROP_GREEN  = [0.30, -0.15, PLACE_Z]
    DROP_YELLOW = [0.30,  0.15, PLACE_Z]

    # Move blocks
    move_block(pub_command, loop_rate, start_green,  DROP_GREEN,  vel, accel)
    move_block(pub_command, loop_rate, start_yellow, DROP_YELLOW, vel, accel)

# Move GREEN first
move_block(pub_command, loop_rate, start_green, DROP_GREEN, vel, accel)

# ===== Re-detect blocks before moving YELLOW =====
rospy.loginfo("Re-detecting yellow block after moving green...")

# Wait a little for camera update
time.sleep(1.0)

# Ensure yellow exists now
while len(xw_yw_Y) == 0:
    rospy.loginfo("Waiting for yellow block to appear...")
    time.sleep(0.1)

# New yellow location AFTER green is removed
start_yellow = [xw_yw_Y[0][0], xw_yw_Y[0][1], PICK_Z]

# Move YELLOW
move_block(pub_command, loop_rate, start_yellow, DROP_YELLOW, vel, accel)


# ========================= Student's code ends here ===========================

    move_arm(pub_command, loop_rate, go_away, vel, accel)
    rospy.loginfo("Task Completed!")
    print("Use Ctrl+C to exit program")
    rospy.spin()

if __name__ == '__main__':

